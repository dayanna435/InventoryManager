<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ibero.controllers.ProductController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane hgap="10" vgap="10">
        <Label text="Modelo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Button text="Guardar" onAction="#saveProduct" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>